<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.acer.mindpicking">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PreviewActivity" />
        <activity android:name=".SearchActivity" android:theme="@style/EditTheme"/>
        <activity android:name=".PicStackViewActivity" android:theme="@style/StackViewTheme"/>
        <activity android:name=".SaveActivity" android:theme="@style/MyDialogActivityStyle" />
        <activity android:name=".EditSetActivity" android:theme="@style/EditTheme"/>
        <activity android:name=".AlbumActivity" android:theme="@style/AlbumSaveTheme"/>
        <activity android:name=".FinishpreviewActivity" android:theme="@style/EditTheme"/>
    </application>
</manifest>